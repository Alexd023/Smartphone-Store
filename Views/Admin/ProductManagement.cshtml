@model IEnumerable<Smartphone_Store.Models.Product>

@{
    ViewData["Title"] = "Product Management";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Name</td>
                <td>@product.Brand</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Stock</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@product.ProductID" class="btn btn-primary">Edit</a>
                    <form asp-action="DeleteProduct" asp-route-id="@product.ProductID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddProduct" asp-controller="Home" class="btn btn-success">Add New Product</a>