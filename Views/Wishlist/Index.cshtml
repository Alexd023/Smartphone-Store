@model IEnumerable<Smartphone_Store.Models.Product>

<h1>My Wishlist</h1>

@if (!Model.Any())
{
    <p>Your wishlist is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@p.ProductID">
                            @p.Name
                        </a>
                    </td>
                    <td>@p.Price.ToString("C")</td>
                    <td>
                        <form asp-controller="Wishlist" asp-action="Remove" method="post">
                            <input type="hidden" name="productId" value="@p.ProductID" />
                            <button class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}